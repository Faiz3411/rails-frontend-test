<div id="<%= dom_id(reason) %>" data-id="<%= reason.id %>" class="reason">
  <%= turbo_frame_tag reason do %>
    <div class="flex items-center justify-between py-3 px-4 bg-box-gray">
      <div class="flex items-center">
        <button class="inline-block mr-7.5">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M11 18c0 1.1-.9 2-2 2s-2-.9-2-2 .9-2 2-2 2 .9 2 2zm-2-8c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0-6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm6 4c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" fill="#d6d6d6" class="color000000 svgShape"></path>
          </svg>
        </button>
        <% if reason.active %>
          <button class="p-1 mr-2 focus:outline-none">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 96 96" fill="currentColor">
              <path d="M48 12C16 12 0 48.166 0 48.166S16 84 48 84s48-36 48-36-16-36-48-36zm0 64C26.854 76 13.503 56.118 9.003 48.148 13.5 40.102 26.854 20 48 20c21.15 0 34.502 19.998 38.998 28C82.494 56.016 69.145 76 48 76zm0-44c-8.836 0-16 7.164-16 16 0 8.837 7.164 16 16 16 8.837 0 16-7.163 16-16 0-8.836-7.163-16-16-16zm0 24c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z" fill="#3164f6" class="color000000 svgShape"></path>
            </svg>
          </button>
          <span class="font-medium flex-grow"><%= reason.label %></span>
        <% else %>
          <button class="p-1 mr-2 focus:outline-none">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <g fill="none" fill-rule="evenodd" stroke="#d6d6d6" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="colorStroke000000 svgStroke"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24M1 1l22 22" class="color000000 svgShape"></path></g>
            </svg>
          </button>
          <span class="font-medium flex-grow text-color-font"><%= reason.label %></span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
