<div class="flex min-h-screen">
  <div class="w-1/6 bg-dark-gray"></div>
  <div class="relative w-5/6 bg-light-gray p-8 min-h-screen">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Returns</h1>    
    <div class="bg-white rounded-lg shadow-md p-6 flex justify-between items-start mb-6">
      <div class="w-1/2 pr-4">
        <h2 class="text-2xl font-bold text-gray-900">Return Reasons</h2>
        <p class="text-gray-600 mt-2">Add or edit return reasons you would like to show the customers during the return request process.</p>
      </div>
     
      <div class="bg-box-gray border border-line-gray w-1/2 rounded-lg divide-y divide-line-gray">
        
        <div id="reasons">
          <%= render 'reasons/reasons_list', reasons: @reasons, storefront: @storefront %>
        </div>
      </div>
    </div>
    <div class="absolute inset-x-0 bottom-0 bg-white p-4 flex justify-between items-center shadow-md">
      <span class="text-gray-700">Remember to save your changes before leaving this page.</span>
      <button class="btn-secondary">
        Save
      </button>
    </div>
  </div>
</div>